<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context="com.winetraces.nortoncosecha.Menu">

    <WebView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/waitCard"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mainFrame"
        >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:id="@+id/reporteMain"
        android:layout_alignParentStart="true" />

    <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textClock"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="25sp"
        android:layout_marginTop="55dp"
        android:layout_marginStart="270dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="330dp"
        android:layout_height="360dp"
        android:layout_below="@+id/textClock"
        android:layout_marginTop="200dp"
        android:layout_marginStart="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:typeface="monospace"
        android:id="@+id/textView" />

    <Button
        android:layout_width="140dp"
        android:layout_height="35dp"
        android:id="@+id/imprimir"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="12dp"
        android:background="@android:color/transparent"
        android:onClick="imprimirClick"
        />

    <Button
        android:layout_width="140dp"
        android:layout_height="35dp"
        android:id="@+id/salir"
        android:layout_alignParentStart="true"
        android:layout_marginStart="190dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="12dp"
        android:background="@android:color/transparent"
        android:onClick="salirClick"
        />

    <Button
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="130dp"
        android:onClick="buttonLeftClick"
        android:id="@+id/button_left"
        android:background="@android:color/transparent" />

    <Button
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="310dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="130dp"
        android:id="@+id/button_right"
        android:onClick="buttonRightClick"
        android:layout_alignTop="@+id/button_left"
        android:background="@android:color/transparent" />
    </RelativeLayout>
</RelativeLayout>