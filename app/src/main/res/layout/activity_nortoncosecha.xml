<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.winetraces.nortoncosecha.NortonCosecha">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/image"
        android:id="@+id/background"
        android:visibility="visible" />

    <RelativeLayout
        android:id="@+id/mainScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">


        <TextClock
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textClock"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="25sp"
            android:layout_marginTop="55dp"
            android:layout_marginStart="270dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="32dp"
            android:gravity="center"
            android:textSize="30sp"
            android:id="@+id/cosechador_nombre"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_marginTop="230dp"
            android:layout_marginStart="35dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="110dp"
            android:layout_height="42dp"
            android:gravity="center"
            android:textSize="40sp"
            android:id="@+id/cosechador_count"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="290dp"
            android:layout_marginStart="125dp" />

        <TextView
            android:layout_width="140dp"
            android:layout_height="32dp"
            android:id="@+id/cosechador_legajo"
            android:textSize="30sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="170dp"
            android:layout_marginStart="150dp"  />

        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/Count1"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textAlignment="center"
            android:layout_marginTop="420dp"
            android:layout_marginStart="150dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textSize="18sp"  />

        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/Count2"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textAlignment="center"
            android:layout_marginTop="420dp"
            android:layout_marginStart="207dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textSize="18sp"  />

        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/Count3"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textAlignment="center"
            android:layout_marginTop="420dp"
            android:layout_marginStart="264dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textSize="18sp"  />

        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/Count4"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textAlignment="center"
            android:layout_marginTop="540dp"
            android:layout_marginStart="150dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textSize="18sp"   />

        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/Count5"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textAlignment="center"
            android:layout_marginTop="540dp"
            android:layout_marginStart="207dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textSize="18sp"  />

        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/Count6"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textAlignment="center"
            android:layout_marginTop="540dp"
            android:layout_marginStart="264dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textSize="18sp" />

        <Button
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:text="@string/program_name"
            android:textStyle="normal|bold"
            android:fontFamily="sans-serif"
            android:textSize="18sp"
            android:id="@+id/programa"
            android:onClick="programaClick"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"
            android:textColor="@android:color/holo_red_dark" />

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/cosechadorTimer"
            android:layout_alignTop="@+id/cosechador_count"
            android:layout_marginTop="-20dp"
            android:progressDrawable="@drawable/circular_progress_bar"
            android:background="@drawable/circle_shape"
            android:indeterminate="false"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</FrameLayout>